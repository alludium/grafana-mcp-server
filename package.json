{
  "name": "@alludium/grafana-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Grafana - log search and observability queries",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "grafana-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
